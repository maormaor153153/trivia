<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66c1ff"

    tools:context="com.example.maor.trivia.MenuActivity">


    <Button
        android:id="@+id/editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"

        android:layout_above="@+id/playNow"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="74dp"
        android:text="@string/editProfile" />

    <Button
        android:id="@+id/playNow"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:background="@drawable/shape"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:text="@string/playNow" />

    <Button
        android:id="@+id/yourStats"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="59dp"
        android:background="@drawable/shape"

        android:text="@string/yourStats" />

    <Button
        android:id="@+id/leaderboard"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/playNow"
        android:layout_below="@+id/playNow"
        android:layout_marginTop="37dp"
        android:background="@drawable/shape"

        android:text="@string/leaderboard" />


    <Button
        android:id="@+id/settings"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/yourStats"
        android:layout_alignTop="@+id/leaderboard"
        android:background="@drawable/shape"

        android:text="@string/settings" />




</RelativeLayout>
