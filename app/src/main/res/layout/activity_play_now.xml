<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66c1ff"

    tools:context="com.example.maor.trivia.Activity.PlayNowActivity">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <Button
        android:id="@+id/quickGame"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:background="@drawable/shape"
        android:text="Quick Game"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/compete"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/playNow"
        android:background="@drawable/shape"
        android:text="Compete"/>

</LinearLayout>




</RelativeLayout>
